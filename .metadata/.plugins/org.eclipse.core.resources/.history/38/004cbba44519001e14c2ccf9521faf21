package ex01;

import java.util.Scanner;

public class condition {
	public static void run() {
		//if문, switch~case
		Scanner s=new Scanner(System.in);
		System.out.println("점수: ");
		int grade=s.nextInt();
		String result="";
		if(grade>=90) {
			if(grade>=95) {
				result="A+";
			}else {
				result="A0";
			}
			result="A";
		}else if(grade>=80) {
			if(grade>=85) {
				result="B+";
			}else {
				result="B0";
			}
			result="B";
		}else if(grade>=70) {
			if(grade>=75) {
				result="C+";
			}else {
				result="C0";
			}
			result="C";
		}else if(grade>=60) {
			if(grade>=65) {
				result="D+";
			}else {
				result="D0";
			}
			result="D";
		}else {
			result="F";
		}
		System.out.println("학점: " + result);
			
			
	}//run
}//class
