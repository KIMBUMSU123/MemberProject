package ex01;

import java.util.Scanner;

public class Repeat {
	public static void run() {
		//반복문 (while, for)
		Scanner s = new Scanner(System.in);
		
		System.out.println("----------------------------");
		System.out.println("1:100까지합 | 2:100까지 짝수합 | 3.100까지 홀수합");
		System.out.println("----------------------------");
		System.out.print("선택>");
		String menu = s.nextLine();
	}
}
